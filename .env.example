# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebRTC Signaling Server
# For local development, use ws://localhost:3001
# For production, use your Railway signaling server URL (wss://your-signaling-server.up.railway.app)
NEXT_PUBLIC_SIGNALING_SERVER_URL=ws://localhost:3001

# Clerk Authentication
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk Webhook Secret
# Get this from Clerk Dashboard -> Webhooks after creating a webhook endpoint
CLERK_WEBHOOK_SECRET=whsec_...

# Database
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Optional - for signaling server horizontal scaling)
# For Railway: Use the internal Redis URL from Railway dashboard
# For local development: redis://localhost:6379
REDIS_URL=redis://localhost:6379
