// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  clerkUserId  String    @unique
  email        String?
  username     String?   @unique
  phone        String?
  displayName  String?
  avatarUrl    String?
  bio          String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  devices        Device[]
  connectionsA   Connection[] @relation("UserA")
  connectionsB   Connection[] @relation("UserB")
  fileAds        FileAdvertisement[]
  sentMessages   MessageMetadata[] @relation("Sender")
  receivedMessages MessageMetadata[] @relation("Receiver")
  encryptionKeys UserEncryptionKey[]

  @@index([clerkUserId])
  @@index([email])
  @@index([username])
  @@index([phone])
}

model Device {
  id                  String   @id @default(uuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceName          String
  deviceType          String   // web, mobile, desktop
  publicKey           String   @db.Text // E2E encryption public key
  clipboardSyncEnabled Boolean  @default(false) // Per-device clipboard sync preference
  lastSeen            DateTime @default(now())
  createdAt           DateTime @default(now())

  fileAds       FileAdvertisement[]
  encryptionKey UserEncryptionKey?

  @@index([userId])
  @@index([lastSeen])
}

model Connection {
  id        String   @id @default(uuid())
  userAId   String
  userBId   String
  userA     User     @relation("UserA", fields: [userAId], references: [id], onDelete: Cascade)
  userB     User     @relation("UserB", fields: [userBId], references: [id], onDelete: Cascade)
  status    String   @default("pending") // pending, accepted, blocked
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userAId, userBId])
  @@index([userAId])
  @@index([userBId])
  @@index([status])
}

model FileAdvertisement {
  id        String   @id @default(uuid())
  userId    String
  deviceId  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  fileName  String
  fileHash  String   // SHA-256 for deduplication
  fileSize  BigInt
  mimeType  String?
  metadata  Json?    // Encrypted metadata
  expiresAt DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([deviceId])
  @@index([fileHash])
  @@index([expiresAt])
}

model MessageMetadata {
  id                  String    @id @default(uuid())
  senderId            String
  receiverId          String
  sender              User      @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver            User      @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  messageType         String    // text, file, call
  encryptedContent    String?   @db.Text // Encrypted message for offline delivery
  delivered           Boolean   @default(false) // Track delivery status
  expiresAt           DateTime? // Auto-cleanup server copy after delivery
  encryptedContentHash String?  // Hash of encrypted content (for verification)
  timestamp           DateTime  @default(now())

  @@index([senderId])
  @@index([receiverId])
  @@index([timestamp])
  @@index([receiverId, delivered]) // Query undelivered messages efficiently
}

model UserEncryptionKey {
  id                 String   @id @default(uuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceId           String?  @unique // null for backup keys
  device             Device?  @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  encryptedMasterKey String   @db.Text // Base64-encoded encrypted key
  keyType            String   // 'device' | 'backup'
  salt               String?  // For backup key derivation (base64)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([userId, keyType]) // One backup key per user
  @@index([userId])
}

